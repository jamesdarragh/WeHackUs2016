
@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Search</h3>

<div class="row">
    <div class="col-md-5">
        <div class="contact-item">
            <!-- Contact Form -->
            <div class="contact-form">
                <!-- Form -->
                <form class="form" role="form">
                    <!-- Form Group -->
                    <div class="form-group">
                        <input type="text" class="form-control" id="school" placeholder="School">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" id="zipCode" placeholder="Zip Code">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" id="church" placeholder="Church">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" id="sport" placeholder="Sport">
                    </div>
                    <div class="form-group">
                        <label for="ageGroup" style="display:block">Age of children</label>
                        <input type="checkbox" name="ageGroup" value="1"> 0-3<br />
                        <input type="checkbox" name="ageGroup" value="2"> 4-6<br />
                        <input type="checkbox" name="ageGroup" value="3"> 7-10<br />
                        <input type="checkbox" name="ageGroup" value="4"> 11-13<br />
                    </div>
                    <div class="form-group">
                        <label for="ageGroup" style="display:block">Days needed</label>
                        <input type="checkbox" name="schedule" value="1"> Friday<br />
                        <input type="checkbox" name="schedule" value="2"> Saturday<br />
                        <input type="checkbox" name="schedule" value="3"> Sunday<br />
                    </div>

                    <!-- Button -->
                    <button type="button" class="btn btn-red">Submit</button>&nbsp;
                    <button type="button" class="btn btn-default">Reset</button>
                </form>
            </div>
        </div>
    </div>
</div>
